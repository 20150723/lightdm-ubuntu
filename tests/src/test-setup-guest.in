#!/bin/sh

# Output name of created account
echo "guest"

# Stop if already in passwd file
PASSWD_FILE=@abs_top_srcdir@/tests/data/passwd
ACC=`grep guest $PASSWD_FILE`
if [ -n "$ACC" ] ; then
   exit 0
fi

# Add account to password file
echo "guest::1003:1003:Guest Account:@abs_top_srcdir@/tests/data/home/guest:/bin/sh" >> $PASSWD_FILE

# Create home directory
mkdir -p @abs_top_srcdir@/tests/data/home/guest
